<h1>By Age</h1>

<table class="Age">
  <tr class="Row Header">
    <td><%= link_to "Character",  stats_by_age_path(order: :name) %>    </td>
    <td><%= link_to "Birth Year", stats_by_age_path(order: :birth_year) %>  </td>
    <td>Actions  </td>
    <td></td>
  </tr>
  <% @chars.each do |char| %>
    <tr class="Char">
      <td class="Character">
        <%= char.name %>
      </td>
      <td class="Birth Year">
        <%= year_str(char.birth_year) %>
      </td>
      <td class="Action">
        <%= link_to "actions", "javascript:void(0)", class: :more %>
        <div class="hidden">
          <%= form_tag(stats_within_year_path, remote: true) do %>
            born within
            <%= hidden_field_tag(:char_id, char.id) %>
            <%= text_field_tag("diff", "", size: 2) %>
            years.
            <input type="submit"/>
          <% end %>
        </div>
      </td>
      <td>

      </td>
    </tr>
    <tr >
      <td class="hidden" colspan="4" id="char-<%= char.id%>-output"></td>
    </tr>
  <% end %>
</table>
